  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/nestjs-package-jwt-authentication-consumer/src/main.ts",
      "envFile": "${workspaceFolder}/nestjs-package-jwt-authentication-consumer/.env",
      "outputCapture": "std",
      // if commented use debug console as default
      // "console": "integratedTerminal"
      // https://code.visualstudio.com/docs/nodejs/nodejs-debugging#_launch-configuration-support-for-npm-and-other-tools
      "cwd": "${workspaceFolder}/nestjs-package-jwt-authentication-consumer",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run-script", "start:debug"],
    }
  ]
}
